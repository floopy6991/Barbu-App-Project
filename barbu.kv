#:kivy 1.0.9

<BarbuGame>:
   canvas:
      Rectangle:
         pos: self.pos
         size: self.size
         AsyncImage:
            source: 'images\2nd-Concpet-Design.svg'
   Label:
      font_size: 20
      center_x: root.width / 6
      top: root.top * 0.12
      text: "Score:"
      
   Label:
      font_size: 20
      center_x: root.width * 5 / 6
      top: root.top * 0.12
      text: "Name"
      
   Label:
      font_size: 40
      center_x: root.width / 2
      top: root.top - 10
      text: "Current Game:"
      
   Rectangle:
      size: 60, 90
      center_x: root.width / 5
      top: root.top / 3
      source: 'images\King-H.png'