#:kivy 1.0.9

<BarbuGame>:
   canvas:
      Color:
         rgb: (0.055, 0.73, 0.012)
      Rectangle:
         pos: self.pos
         size: self.size
   Label:
      font_size: 20
      center_x: root.width / 6
      top: root.top * 0.12
      text: "Score:"
      
   Label:
      font_size: 20
      center_x: root.width * 5 / 6
      top: root.top * 0.12
      text: "Name"
      
   Label:
      font_size: 40
      center_x: root.width / 2
      top: root.top - 10
      text: "Current Game:"
      
   Image:
      size: 60, 90
      center_x: root.width / 5
      top: root.top / 3
      source: 'images\King-H.png'